@inject NewLock.Services.CartService CartService;

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NewLock</a>
            <!-- Replace line above with Affordable Lock Logo, Link to Home -->
            <div class="input-group justify-content-center">
                <div class="flex-grow-4">
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Categories</option>
                        <option value="1">Cylinders</option>
                        <option value="2">Door Locks - Mechanical</option>
                        <option value="3">Door Closers & Operators</option>
                        <option value="4">Door Accessories</option>
                        <option value="5">Keys & Key Accessories</option>
                        <option value="6">Padlocks & Accessories</option>
                        <option value="7">Cabinet & Utility Locks</option>
                        <option value="8">Safes & Safe Locks</option>
                        <option value="9">Exit Devices</option>
                        <option value="10">Access Control</option>
                    </select>
                </div>
                <form class="d-flex w-25" asp-controller="Search" asp-action="Index" method="get">
                    <input class="form-control mr-sm-2" type="search" name="query" placeholder="Search"
                        aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>

            <li class="nav-item d-flex">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Registration">
                    <i class="bi bi-person-bounding-box"></i> | Register</a>
            </li>

            <li class="nav-item d-flex">
                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                    <i class="bi bi-bag"></i>
                    Cart |
                    <span class="badge bg-secondary">@cartItemCount</span>
                </a>
            </li>
        </div>
    </nav>
</header>

@code {
    private int cartItemCount;



    private bool shouldRender = false;

    protected override bool ShouldRender()
    {
        return shouldRender;
    }

    // This method runs when the component is initialized.
    protected override async Task OnInitializedAsync()
    {
        cartItemCount = await CartService.GetCartItemCountAsync();
    }
}