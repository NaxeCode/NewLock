@model NewLock.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Url.Content($"https://media.idn-inc.com/Photos/{Model.Ez}.jpg")" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h3>Description</h3>
        <p>@Model.Description</p>
        <h3>Price</h3>
        <p><strong>$@Model.Price.ToString("F2")</strong></p>
        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="number" name="quantity" value="1" min="1" />
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Search" asp-action="Index" class="btn btn-secondary">Back to Search Results</a>
</div>